<%= content_for(:title) { "Device Stories" } %>
<div id="btn_fullscr" style="float: right; margin-top: 15px;">
  <%= render 'button_toggle_view'%>
</div>

<h2>Device Stories</h2>
<div class="container">
  <div class="row">
    <div class='col-sm-6'>
      <div class="form-group">
        <div class='input-group date' id='datetimepicker1'>
          <input type='text' class="form-control" />
          <span class="input-group-addon">
               <span class="glyphicon glyphicon-calendar"></span>
               </span>
        </div>
      </div>
    </div>
    <% content_for :javascript do %>

  <script type="text/javascript">
        $(function () {
            $('#datetimepicker1').datetimepicker();
        });
    </script>
      <% end %>
  </div>
</div>
<hr/>
<div class="well" style="padding-bottom: 70px; padding-top: 20px">
    <div id="counter" style="text-align: center; float: left; margin-top: 15px;">
      <%= render 'counts'%>
    </div>
  <div style = "float:right">
    <div id="search_form" style="padding-top: 0px">
      <%= render 'search_form'%>
    </div>

  </div>
</div>

<div id="results_class">
  <%= render 'results', device_stories: @device_stories %>
</div>
<div id="paginate"><%= render 'paginate'%></div>
<div id="per_page_select">
  <%= render 'per_page_select'%>
</div>
<div class="spacer"></div>
<%= current_page_api_example :device_stories_url %>
